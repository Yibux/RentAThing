<Window x:Class="RentalSystem.Client.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie - Panel Administratora" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

	<Border CornerRadius="20" Background="#F0F2F5" BorderBrush="#D1D1D1" BorderThickness="1">
		<Border.Effect>
			<DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Gray"/>
		</Border.Effect>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1.2*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" CornerRadius="20,0,0,20" Background="#2D3E50">
				<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
					<TextBlock Text="RentAThing" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
					<TextBlock Text="PANEL ADMINISTRATORA" FontSize="14" Foreground="#B0B8C1" HorizontalAlignment="Center" Margin="0,10,0,0"/>
				</StackPanel>
			</Border>

			<StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40">
				<TextBlock Text="Zaloguj się" FontSize="26" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,25"/>

				<TextBlock Text="EMAIL" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
				<TextBox x:Name="txtEmail" Height="40" Padding="10,0" VerticalContentAlignment="Center" FontSize="14" BorderBrush="#CCC">
					<TextBox.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="5"/>
						</Style>
					</TextBox.Resources>
				</TextBox>

				<TextBlock Text="HASŁO" FontSize="11" FontWeight="Bold" Foreground="#888" Margin="0,20,0,5"/>
				<PasswordBox x:Name="txtPassword" Height="40" Padding="10,0" VerticalContentAlignment="Center" FontSize="14" BorderBrush="#CCC">
					<PasswordBox.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="5"/>
						</Style>
					</PasswordBox.Resources>
				</PasswordBox>

				<Button x:Name="btnLogin" Content="ZALOGUJ" Height="45" Margin="0,35,0,0"
                        Background="#007ACC" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderThickness="0" Click="BtnLogin_Click" Cursor="Hand">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="5"/>
						</Style>
					</Button.Resources>
				</Button>

				<Button Content="Zamknij aplikację" HorizontalAlignment="Center" Margin="0,20,0,0"
                        Background="Transparent" BorderThickness="0" Foreground="#999" FontSize="12"
                        Click="BtnExit_Click" Cursor="Hand"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>