<Window x:Class="RentalSystem.Client.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2D3E50">
            <StackPanel Margin="10,20">
                <TextBlock Text="RentAThing" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Button Content="Users" Height="45" Click="BtnUsers_Click"
                        Background="Transparent" Foreground="White" BorderThickness="0" FontSize="14" HorizontalContentAlignment="Left" Padding="20,0"/>

                <Button Content="Listing Verification" Height="45" Click="BtnListings_Click" Margin="0,5,0,0"
                        Background="Transparent" Foreground="White" BorderThickness="0" FontSize="14" HorizontalContentAlignment="Left" Padding="20,0"/>

                <Separator Background="#44566C" Margin="10,20"/>

                <Button Content="Log out" Height="45" Click="BtnLogout_Click"
                        Background="#D9534F" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>