<Page x:Class="RentalSystem.Client.Desktop.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UsersPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock Text="User list" FontSize="24" FontWeight="SemiBold" 
                   VerticalAlignment="Center" Margin="20,0" Foreground="#333"/>

        <DataGrid x:Name="dgUsers" Grid.Row="1" Margin="20,0" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Background="White" BorderBrush="#DDD">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="150"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                <DataGridTemplateColumn Header="Banned" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IsBanned}" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Foreground="{Binding IsBannedColor}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
            <Button Content="Refresh" Width="100" Height="30" Margin="0,0,10,0" Click="BtnRefresh_Click"/>
            <Button Content="BAN" Background="#D9534F" Foreground="White" FontWeight="Bold" Width="100" Height="30" Margin="0,0,10,0" Click="BtnBan_Click"/>
            <Button Content="UNBAN" Background="#5CB85C" Foreground="White" FontWeight="Bold" Width="100" Height="30" Click="BtnUnban_Click"/>
        </StackPanel>
    </Grid>
</Page>