<Page x:Class="RentalSystem.Client.Desktop.ListingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Weryfikacja Ogłoszeń">

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Oczekujące ogłoszenia" FontSize="18" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Margin="20,0" Foreground="#333"/>

                <ListBox x:Name="lbItems" Grid.Row="1" BorderThickness="0" 
                         SelectionChanged="LbItems_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Category}" Foreground="Gray" FontSize="12"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding PricePerDay}" FontWeight="SemiBold" Foreground="#2D3E50"/>
                                        <TextBlock Text=" PLN/dzień" Foreground="#2D3E50"/>
                                    </StackPanel>
                                    <Border Background="{Binding StatusColor}" CornerRadius="4" 
                                            HorizontalAlignment="Left" Padding="5,2" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spDetails" Margin="30" Visibility="Collapsed">
                <TextBlock Text="{Binding SelectedItem.Title}" FontSize="28" FontWeight="Bold" TextWrapping="Wrap" Foreground="#333"/>
                <TextBlock Text="{Binding SelectedItem.Id}" Foreground="#AAA" Margin="0,0,0,20"/>

                <TextBlock Text="ZDJĘCIA" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding SelectedItem.Photos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,0,10,10">
                                <Image Source="{Binding}" Height="150" Stretch="Uniform"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="OPIS" FontWeight="Bold" Foreground="#888" Margin="0,20,0,5"/>
                <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                    <TextBlock Text="{Binding SelectedItem.Description}" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                </Border>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="CENA" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                        <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding SelectedItem.PricePerDay}" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding SelectedItem.Currency}" FontSize="18"/>
                                <TextBlock Text=" / dzień" VerticalAlignment="Bottom" Margin="5,0,0,2"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="LOKALIZACJA" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                        <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedItem.Location.City}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedItem.Location.AddressLabel}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Decyzja Administratora" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#0D47A1"/>

                        <TextBlock Text="Powód odrzucenia (wymagane przy odrzuceniu):" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtReason" Height="60" TextWrapping="Wrap" AcceptsReturn="True" BorderBrush="#AAA" Padding="5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="ODRZUĆ" Background="#D9534F" Foreground="White" FontWeight="Bold" 
                                    Width="120" Height="35" Margin="0,0,10,0" Click="BtnReject_Click"/>

                            <Button Content="ZATWIERDŹ" Background="#5CB85C" Foreground="White" FontWeight="Bold" 
                                    Width="120" Height="35" Click="BtnApprove_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>