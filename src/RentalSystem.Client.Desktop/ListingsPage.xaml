<Page x:Class="RentalSystem.Client.Desktop.ListingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Listing Verification">

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Pending Listings" FontSize="18" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Margin="20,0" Foreground="#333"/>

                <ListBox x:Name="lbItems" Grid.Row="1" BorderThickness="0" 
                         ItemsSource="{Binding Listings}"
                         SelectedItem="{Binding SelectedListing, Mode=TwoWay}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         HorizontalContentAlignment="Stretch">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" CornerRadius="4" Margin="0,0,10,0" BorderBrush="#EEE" BorderThickness="1">
                                        <Image Source="{Binding Photos[0]}" Stretch="UniformToFill" Height="50" Width="50"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Category}" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding PriceDisplay}" FontWeight="SemiBold" Foreground="#2D3E50" HorizontalAlignment="Right"/>

                                        <TextBlock Text="{Binding Status}" 
                                                   Foreground="{Binding StatusColor}" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spDetails" Margin="30" Visibility="{Binding DetailsVisibility}">

                <TextBlock Text="{Binding SelectedListing.Title}" FontSize="28" FontWeight="Bold" TextWrapping="Wrap" Foreground="#333"/>
                <TextBlock Text="{Binding SelectedListing.Id}" Foreground="#AAA" Margin="0,0,0,20"/>

                <TextBlock Text="PHOTOS" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>

                <ItemsControl ItemsSource="{Binding SelectedListing.Photos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,0,10,10" CornerRadius="4" ClipToBounds="True">
                                <Image Source="{Binding}" Height="150" Stretch="Uniform"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="DESCRIPTION" FontWeight="Bold" Foreground="#888" Margin="0,20,0,5"/>
                <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                    <TextBlock Text="{Binding SelectedListing.Description}" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                </Border>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="PRICE" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                        <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                            <TextBlock Text="{Binding SelectedListing.PriceDisplay}" FontSize="18" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="LOCATION" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                        <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedListing.Location.City}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedListing.Location.AddressLabel}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Admin Decision" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#0D47A1"/>

                        <TextBlock Text="{Binding SelectedListing.StatusMessage}" 
                   Foreground="{Binding SelectedListing.StatusColor}" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

                        <StackPanel Margin="0,5,0,15">

                            <TextBlock Text="Rejection reason:" Margin="0,0,0,5" Foreground="#555"/>

                            <Border Background="#FFEBEE" BorderBrush="#FFCDD2" BorderThickness="1" CornerRadius="4" Padding="10"
            Visibility="{Binding SelectedListing.RejectedReasonTextVisibility}">
                                <TextBlock Text="{Binding SelectedListing.RejectionReason}" 
                   TextWrapping="Wrap" 
                   Foreground="#D32F2F" 
                   FontStyle="Italic"/>
                            </Border>

                            <TextBox x:Name="txtReason" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 BorderBrush="#AAA" 
                                 Padding="5"
         
                                 Text="{Binding SelectedListing.RejectionReason, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         
                                 Visibility="{Binding SelectedListing.ReasonInputVisibility}"
                                 IsEnabled="{Binding SelectedListing.IsRejectEnabled}"/>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">

                            <Button Content="REJECT" 
                    Background="#D9534F" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0" 
                    Click="BtnReject_Click"
                    IsEnabled="{Binding SelectedListing.IsRejectEnabled}"/>

                            <Button Content="APPROVE" 
                    Background="#5CB85C" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Width="120" 
                    Height="35" 
                    Click="BtnApprove_Click"
                    IsEnabled="{Binding SelectedListing.IsApproveEnabled}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>